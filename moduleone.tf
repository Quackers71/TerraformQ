##################################################################################
# VARIABLES
##################################################################################

variable "aws_access_key" {}
variable "aws_secret_key" {}

variable "my_region" {
  default = "eu-west-2"
}

##################################################################################
# PROVIDERS
##################################################################################

provider "aws" {
  access_key = "${var.aws_access_key}"
  secret_key = "${var.aws_secret_key}"
}

##################################################################################
# RESOURCES
##################################################################################

#AWS DNS #
resource "aws_route53_record" "elb" {
  name                = "dev-website"
  zone_id             = "quackers.ninja"
  type				  = "A"
  ttl                 = "30"
  provider            = "aws"
}

##################################################################################
# OUTPUT
##################################################################################

output "aws_dns_name" {
  value = "${aws_route53_record}"
}
